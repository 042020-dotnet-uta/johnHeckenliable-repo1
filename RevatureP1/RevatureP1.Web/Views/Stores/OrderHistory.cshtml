@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "Order History";
}

<h1>Order History</h1>

<p>
    <!--<a asp-action="Create">Create New</a>-->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Customer.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalItems)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSale)
            </td>
            <td>
                <!--<a asp-action="Edit" asp-route-id="@item.Order.OrderId">Edit</a> |-->
                <a asp-action="OrderDetails" asp-route-id="@item.Order.OrderId">Details</a>
                <!--<a asp-action="Delete" asp-route-id="@item.Order.OrderId">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
