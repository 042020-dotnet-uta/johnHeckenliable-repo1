@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order @Html.DisplayFor(model => model.OrderId)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalItems)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalItems)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalSale)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LineItems[0].OrderDetails.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LineItems[0].OrderDetails.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LineItems[0].OrderDetails.PricePaid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LineItems[0].Total)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LineItems)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDetails.Product.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDetails.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDetails.PricePaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
