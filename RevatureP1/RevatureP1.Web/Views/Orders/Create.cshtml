@model CreateOrderViewModel

@{
    ViewData["Title"] = "Order Placement";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--
            <div class="form-group">
                <label asp-for="CusomerId" class="control-label"></label>
                <select asp-for="CusomerId" class ="form-control" asp-items="ViewBag.CusomerId"></select>
            </div>
                -->
            <div class="form-group">
                <label asp-for="StoreLocations" class="control-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="Model.StoreLocations"></select>
            </div>

            <div class="form-group">
                <input asp-action="UpdateLocation" type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
        @if (Model.SelectedStore != null)
        {
            <form asp-action="Create" method="get">
                <div>
                    <strong>Add items to order</strong>
                    <div class="form-row mb-lg-5">
                        <div class="col">
                            <label>Select product</label>
                            <select v-model="selectedProduct" class="form-control" id="product">
                                <option disabled value="">Please select one</option>
                                @foreach (var product in Model.SelectedStore.AvailableProducts)
                                {
                                    <option value="@product.ProductId">
                                        @product.Product.ProductDescription - @product.Product.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)
                                    </option>

                                    <!--
                                    <option value="@product.ProductId"
                                            v-bind:value="{ productId: '@product.ProductId', name: '@product.Product.ProductDescription', price: @product.Product.Price.ToString(System.Globalization.CultureInfo.InvariantCulture) }">
                                        @product.Product.ProductDescription - @product.Product.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)
                                    </option>
                                    -->
                                }
                            </select>
                        </div>
                        <div class="col-3">
                            <label>Quantity</label>
                            <input asp-for="SelectedQuantity" class="form-control" id="quantity" type="number" value="1" size="50" />
                        </div>
                    </div>
                    <div><input type="submit" value="Add to Order" class="btn btn-primary" /></div>
                </div>
            </form>
        }

    </div>
    <div class="col-4">
        <strong>Current order</strong>
        <div class="mb-lg-5">
            <div class="mb-lg-5">
                Items
                <ul class="list-group">
                    <li v-for="line in lineItems" :key="product.productId" class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">{{ line.product.name }}</h6>
                            <small class="text-muted">Quantity: {{ line.quantity }}</small>
                        </div>
                        <span class="text-muted">${{ line.product.price *  line.quantity }}</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>${{ totalPrice }}</strong>
                    </li>
                </ul>
            </div>
            <button v-on:click="submit" :disabled='canSubmitOrder' class="btn btn-success">CREATE ORDER</button>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
